	<% provide(:title, "Log in") %>
	<div class="col-sm-offset-3 col-sm-6 col-xs-12" id="block-login"style="margin-top:100px;">
					<form>
						<div class="title-log">Log in</div>
						<div class="form-group">
							<label for="exampleInputEmail1" style="color:#fff;">Email</label>
							<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" style="border:none;border-radius:0;">
						</div>
						<div class="form-group">
							<label for="exampleInputPassword1" style="color:#fff;">Password</label>
							<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" style="border:none;border-radius:0;">
						</div>
						<div class="checkbox">
							<label style="color:#fff;">
								<input type="checkbox"> Remember me
							</label>
						</div>
						<button type="submit" class="my-btn">Log in</button>
						<button type="submit" class="pull-right my-btn-fb">Log in with
							<img src="/assets/fb.png" width="15px">
						</button>
					</form>

					<div class="pull-right" style="margin-top:30px">
						<p style="color:#fff;">If you do not create new account, you should register</p>
						<a href="#" class="pull-right my-btn-a">Register</a>
					</div>
</div>